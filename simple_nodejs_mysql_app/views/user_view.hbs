<html lang="en">
<head>
    <meta charset="utf-8">
    <title>CRUD Node.js and Mysql</title>
    <link href="/assets/css/bootstrap.css" rel="stylesheet" type="text/css"/>
</head>
<body>
<div class="container">
    <h2>User List</h2>
    <button class="btn btn-success" data-toggle="modal" data-target="#myModalAdd">Add New</button>
    <table class="table table-striped" id="mytable">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Birth Date</th>
            <th>Job</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {{#each results}}
            <tr>
                <td>{{ user_first_name }}</td>
                <td>{{ user_last_name }}</td>
                <td>{{ user_gender }}</td>
                <td>{{ user_phone }}</td>
                <td>{{ user_email }}</td>
                <td>{{ user_birth_date }} </td>
                <td>{{ user_job }}</td>
                <td>
                    <a href="javascript:void(0);" class="btn btn-sm btn-info edit"
                       data-user_id="{{ user_id }}"
                       data-user_first_name="{{ user_first_name }}"
                       data-user_last_name="{{ user_last_name }}"
                       data-user_gender="{{ user_gender }}"
                       data-user_phone="{{ user_phone }}"
                       data-user_email="{{ user_email }}"
                       data-user_birth_date="{{ user_birth_date }}"
                       data-user_job="{{ user_job }}">Edit</a>
                    <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-user_id="{{ user_id }}">Delete</a>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal Add User-->
<form action="/save" method="post">
    <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Add New User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <input type="text" name="user_first_name" class="form-control" placeholder="First Name" required>
                    </div>

                    <div class="form-group">
                        <input type="text" name="user_last_name" class="form-control" placeholder="Last Name" required>
                    </div>

                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="user_gender" id="male" value="Male">
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="user_gender" id="female" value="Female">
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="tel" name="user_phone" class="form-control" placeholder="Phone" maxlength="10" required>
                    </div>

                    <div class="form-group">
                        <input type="email" name="user_email" class="form-control" placeholder="Email" required>
                    </div>

                    <div class="form-group">
                        <input type="date" name="user_birth_date" class="form-control" placeholder="Birth Date" required>
                    </div>

                    <div class="form-group">
                        <input type="text" name="user_job" class="form-control" placeholder="Job" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Modal Update User-->
<form action="/update" method="post">
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">
                        <input type="text" name="user_first_name" class="form-control user_first_name" placeholder="First Name" required>
                    </div>

                    <div class="form-group">
                        <input type="text" name="user_last_name" class="form-control user_last_name" placeholder="Last Name" required>
                    </div>

                    <div class="form-group">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="user_gender" id="male" value="Male">
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="user_gender" id="female" value="Female">
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="tel" name="user_phone" class="form-control user_phone" placeholder="Phone" maxlength="10" required>
                    </div>

                    <div class="form-group">
                        <input type="email" name="user_email" class="form-control user_email" placeholder="Email" required>
                    </div>

                    <div class="form-group">
                        <input type="date" name="user_birth_date" class="form-control user_birth_date" placeholder="Birth Date" required>
                    </div>

                    <div class="form-group">
                        <input type="text" name="user_job" class="form-control user_job" placeholder="Job" required>
                    </div>

                </div>
                <div class="modal-footer">
                    <input type="hidden" name="user_id" class="user_id">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </div>
        </div>
    </div>
</form>

<!-- Modal Delete User-->
<form id="add-row-form" action="/delete" method="post">
    <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="myModalLabel">Delete User</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <strong>Are you sure to delete this data?</strong>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="user_id" class="form-control user_id2" required>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script src="/assets/js/jquery-3.5.1.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script>
    $(document).ready(function(){
        //showing data to edit modal
        $('#mytable').on('click','.edit',function(){
        var user_id = $(this).data('user_id');
        var user_first_name = $(this).data('user_first_name');
        var user_last_name = $(this).data('user_last_name');
        var user_gender = $(this).data('user_gender');
        var user_phone = $(this).data('user_phone');
        var user_email = $(this).data('user_email');
        var user_birth_date = $(this).data('user_birth_date');
        var user_job = $(this).data('user_job');
        $('#EditModal').modal('show');
        $('.user_first_name').val(user_first_name);
        $('.user_last_name').val(user_last_name);
        $('input:radio[name=user_gender]').val([user_gender]);
        $('.user_phone').val(user_phone);
        $('.user_email').val(user_email);
        $('.user_birth_date').val(user_birth_date);
        $('.user_job').val(user_job);
        $('.user_id').val(user_id);
        });
        //showing delete record modal
        $('#mytable').on('click','.delete',function(){
            var user_id = $(this).data('user_id');
            $('#DeleteModal').modal('show');
            $('.user_id2').val(user_id);
        });
    });
</script>
</body>
</html>